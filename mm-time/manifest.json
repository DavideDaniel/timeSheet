{
  "name": "MM-Time",
  "author": "David Daniel",
  "version": "0.2",

  "description": "Fill out timesheets with ease",
  "manifest_version": 2,

  "browser_action": {
    "default_icon": "mmTime.png",
    "default_popup": "pop_up.html",
    "default_title": "MM-Time",
    "css": ["styles.css"]
  },

  "permissions": [
    "tabs", "*://global-ebusiness.oraclecorp.com/*", "*://www.openair.com/timesheet.pl?uid=*;action=report;timesheet_id=*;r=*",
    "storage"
  ],

  "content_scripts": [{
    "matches": ["*://global-ebusiness.oraclecorp.com/*"],
    "js": ["moment.js", "content.js"],
    "run_at": "document_end"
  }, {
    "matches": ["*://www.openair.com/timesheet.pl?uid=*action=report*"],
    "js": ["jquery-2.0.2.min.js", "oa_content.js"],
    "run_at": "document_end"
  }]
}
